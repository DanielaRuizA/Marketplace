<h2 class="text-center my-4">Create Product</h2>

<%= form_with model: @product, local: true do |form| %>
  <% if form.object.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h3><%= pluralize(form.object.errors.count, "error") %> The product could not be saved due to the following errors:</h3>
    <ul>
      <% form.object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="mb-3">
    <%= form.label :name, "Product Name", class: "form-label" %>
    <%= form.text_field :name, placeholder: "Enter product name", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Product Description", class: "form-label" %>
    <%= form.text_area :description, placeholder: "Enter product description", class: "form-control", rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.label :price, "Product Price", class: "form-label" %>
    <%= form.number_field :price, placeholder: "Enter product price", class: "form-control", min: 0 %>
  </div>

  <div class="mb-3">
    <%= form.label :category_id, "Category", class: "form-label" %>
    <%= form.select :category_id, options_for_select(Category.all.map { |category| [category.name, category.id] }), {}, class: "form-select" %>
  </div>
  
  <div class="mb-3">
    <%= form.label :img, "Upload Product Image", class: "form-label" %>
    <%= form.file_field :img, class: "form-control" %>
  </div>

  <div class="text-center">
    <%= form.submit "Create Product", class: "btn btn-primary" %>
  </div>
<% end %>
